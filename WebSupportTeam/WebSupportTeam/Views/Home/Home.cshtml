                    <div class="row" style="align-items:center;display:flex" onclick="window.location= '@Url.Action("Index", "Application")'">
                        <div style="display:inline-flex">
                            <div class="col-xl-4" style="padding:20px;">
                                <i class="fa fa-list-ul" aria-hidden="true" style="color: #8ba5a5;font-size:60px"></i>
                            </div>
                            <div class="col-xl-8">
                                <div style="padding-top:15px">
                                    <h1><b>@ViewBag.appCount</b></h1>
                                    <h5>APPLICATION</h5>
                                </div>
                            </div>

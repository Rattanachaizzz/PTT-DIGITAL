                        <div style="display:inline-flex">
                            <div class="col-xl-4" style="padding:20px;">
                                <i class="fa-solid fa-folder-open" style="color: #5e7eb5;font-size:60px"></i>
                            </div>
                            <div class="col-xl-8">
                                <div style="padding-top:15px">
                                    <h1><b>@ViewBag.fileCount</b></h1>
                                    <h5>DOCUMENTS</h5>
                                </div>
                            </div>
